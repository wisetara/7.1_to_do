<h1>Tasks</h1>


<ul>
  <h1>Done Tasks</h1>
    <% @tasks.each do |task| %>
    <% if task.mark? %>
  <li>
  <a href='/tasks/<%= task.id %>'><%= task.description %></a></li>
  <form action="/tasks/<%= task.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <input name="task_mark" type="hidden" value="false">
    <input name="description" type="hidden" value="<%= task.description %>">
    <button>Mark Not done</button>
  </form>
  <% end %>
  <% end %>
</ul>

<ul>
  <h1>Not Done Tasks</h1>
  <% @tasks.each do |task| %>
    <% if task.mark? %>
    <% else %>
  <li>
  <a href='/tasks/<%= task.id %>'><%= task.description %></a></li>
  <form action="/tasks/<%= task.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <input name="task_mark" type="hidden" value="true">
    <input name="description" type="hidden" value="<%= task.description %>">
    <button>Mark done</button>
  </form>
  <% end %>
  <% end %>
</ul>




